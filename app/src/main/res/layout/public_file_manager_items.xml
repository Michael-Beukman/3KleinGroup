<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:id="@+id/file_layout"
    >

    <RelativeLayout

        android:id="@+id/public_files_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_toStartOf="@id/recycler_file_name"
            android:id="@+id/recycler_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="@string/public_file_manager_item_file_name"
            android:minWidth="250sp"
            android:maxWidth="250sp"
            android:maxHeight="50dp"
            android:fontFamily="@font/robotrock"
            android:textSize="20sp">

        </TextView>
       <!-- <ImageView
            android:id="@+id/recycler_delete_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete_red_24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:contentDescription="@string/public_file_manager_item_delete"
            >

        </ImageView> -->

        <ImageView
            android:id="@+id/recycler_view_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_visibility_green_24dp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/recycler_file_name"
            android:padding="3dp"
            android:contentDescription="@string/public_file_manager_item_view"
            >

        </ImageView>






    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>