<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:id="@+id/file_layout"
    >

    <RelativeLayout

        android:id="@+id/public_files_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_tiny_distance"
        tools:ignore="UselessParent">

        <TextView
            android:layout_toStartOf="@id/recycler_file_name"
            android:id="@+id/recycler_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="@string/public_file_manager_item_file_name"
            android:minWidth="@dimen/text_largest_dimensions"
            android:maxWidth="@dimen/text_largest_dimensions"
            android:maxHeight="@dimen/text_small_dimensions"
            android:fontFamily="@font/robotrock"
            android:textSize="@dimen/textSize_medium">

        </TextView>


        <ImageView
            android:id="@+id/recycler_view_image"
            android:layout_width="@dimen/dino_image_small_height"
            android:layout_height="@dimen/dino_image_small_height"
            android:src="@drawable/ic_visibility_green_24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_extra_tiny_distance"
            android:contentDescription="@string/public_file_manager_item_view"
            >

        </ImageView>






    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>