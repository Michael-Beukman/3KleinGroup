<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <EditText
        android:id="@+id/public_file_send_file_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_large_distance"
        android:layout_marginTop="@dimen/margin_medium_distance"
        android:layout_marginBottom="@dimen/margin_small_distance"
        android:layout_below="@id/public_file_send_message"
        android:autofillHints="@string/public_file_send_hint"
        android:textStyle="italic"
        android:inputType="text"
        android:minWidth="@dimen/text_large_dimensions"
        android:maxWidth="@dimen/text_large_dimensions"
        android:labelFor="@+id/public_file_send_file_name_edit_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/public_file_send_file_name_edit_text"
        android:layout_below="@id/public_file_send_message"
        android:layout_marginEnd="@dimen/margin_medium_distance"
        android:layout_marginStart="@dimen/margin_tiny_distance"
        android:layout_marginTop="@dimen/margin_medium_distance"
        android:text="@string/public_send_file_name"
        android:fontFamily="@font/robotrock"
        android:textSize="@dimen/textSize_medium"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/public_send_file_button"
        android:layout_width="@dimen/button_large_dimensions_width"
        android:layout_height="@dimen/button_medium_dimensions_height"
        android:minWidth="@dimen/button_large_dimensions_width"
        android:minHeight="@dimen/button_medium_dimensions_height"
        android:background="@drawable/gradient_button_rounded"
        android:layout_above="@id/public_send_file_slogan"
        android:layout_below="@id/public_file_sendprogressBar"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_medium_distance"
        android:text="@string/public_send_file_upload"
        android:fontFamily="@font/robotrock"
        />

    <Button
        android:id="@+id/public_send_file_choose_file_button"
        android:layout_width="@dimen/button_large_dimensions_width"
        android:layout_height="@dimen/button_medium_dimensions_height"
        android:minWidth="@dimen/button_large_dimensions_width"
        android:minHeight="@dimen/button_medium_dimensions_height"
        android:background="@drawable/gradient_button_rounded"
        android:text="@string/public_send_file_choose_file"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/margin_medium_distance"
        android:layout_above="@id/public_send_file_slogan"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/robotrock"
        />

    <ImageView
        android:id="@+id/public_send_file_guy_dino"
        android:layout_width="@dimen/dino_image_medium_height"
        android:layout_height="@dimen/dino_image_medium_width"
        android:background="@drawable/ic_guydino"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_logo"
        android:layout_marginBottom="@dimen/margin_extra_tiny_distance"
        />

    <TextView
        android:id="@+id/public_file_send_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/public_file_manager_title"
        android:fontFamily="@font/robotrock"
        android:layout_below="@id/public_send_file_guy_dino"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_tiny_distance"
        android:textSize="@dimen/textSize_large"
        android:layout_marginBottom="@dimen/margin_small_distance"
        />
    <TextView
        android:id="@+id/public_file_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="6"
        android:maxLines="3"
        android:fontFamily="@font/robotrock"
        android:layout_centerInParent="true"
        android:layout_below="@id/public_file_send_info"
        android:textSize="@dimen/textSize_small"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/margin_extra_tiny_distance"
        android:text="@string/public_file_send_text"
        />

    <TextView
        android:id="@+id/public_send_file_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/margin_small_distance"
        android:text="@string/public_files_slogan"
        android:textStyle="italic"
        android:textSize="@dimen/textSize_small"
        />

    <ProgressBar
        android:id="@+id/public_file_sendprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/progressbar_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/public_send_file_choose_file_button"
        android:layout_marginBottom="@dimen/margin_tiny_distance"
        />
    <TextView
        android:id="@+id/public_send_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/public_file_sendprogressBar"
        android:layout_centerInParent="true"
        android:text="@string/public_file_send_progress"
        android:layout_marginTop="@dimen/margin_small_distance"
        android:textSize="@dimen/textSize_small"
        />



</RelativeLayout>