<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendFileActivity">

    <Button
        android:id="@+id/sf_btnChooseFileFromReceived"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:text="Choose A Received File"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sf_btnChooseFile" />

    <Button
        android:id="@+id/sf_btnChooseFile"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:text="Choose File"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sf_btnChooseFileFromReceived"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/sf_btnChooseFileFromReceived"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/sf_txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a File and user to send it to"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sf_btnSend"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sf_btnChooseFileFromReceived"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sf_btnChooseFileFromReceived"
        app:layout_constraintTop_toBottomOf="@+id/sf_btnChooseFileFromReceived" />

    <ProgressBar
        android:id="@+id/sf_prgbProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="264dp"
        android:layout_height="18dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/sf_btnChooseFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sf_txtProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/sf_prgbProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Uploading..." />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sf_btnSend"
        app:menu="@menu/navigation"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:hint="User Email Address"
        app:layout_constraintBottom_toTopOf="@+id/sf_lblFilename"
        app:layout_constraintTop_toBottomOf="@+id/sf_txtHeader"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sf_txtRecipientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sf_lblFilename"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:hint="File Name"
        app:layout_constraintBottom_toTopOf="@+id/sf_txtProgressBar"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sf_txtFilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>