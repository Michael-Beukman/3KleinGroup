{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha -r ts-node/register --reporter spec test/**/*.ts",
    "test2": "cross-env TS_NODE_FILES=true mocha — exit — require ts-node/register — colors test/**/*.ts",
    "coverage": "nyc npm run test",
    "coverageCoveralls": "nyc npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.24.1",
    "nyc": "^14.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.7",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "cross-env": "^5.2.0",
    "firebase-functions-test": "^0.1.7",
    "mocha": "^7.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typings": "^2.1.1"
  },
  "private": true
}
